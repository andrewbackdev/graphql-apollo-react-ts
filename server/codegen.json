{
  "overwrite": true,
  "schema": "./schema.graphql",
  "generates": {
    "src/generated/schema.ts": {
      "plugins": ["typescript", "typescript-resolvers"],
      "config": {
        "contextType": "../app/context#ResolverContext",
        "mappers": {
          "Company": "../db/types#CompanyEntity",
          "Job": "../db/types#JobEntity"
        },
        "skipTypename": true
      }
    }
  }
}
